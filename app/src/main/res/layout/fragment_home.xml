<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.wx.app.wxapp.widget.view.MultipleStatusView
        android:id="@+id/vw_multiple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:emptyView="@layout/view_empty"
        app:errorView="@layout/view_error"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:loadingView="@layout/view_loading"
        app:noNetworkView="@layout/view_no_net"
        >

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.design.widget.AppBarLayout
                android:id="@+id/ab_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                >
                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/cl_ctb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:contentScrim="@color/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    android:background="@mipmap/ic_launcher"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="110dp"/>
                    <include
                        android:id="@+id/v_head"
                        layout="@layout/view_head"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        />

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/tb_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        app:layout_collapseMode="pin"
                        app:contentInsetStart="0dp"
                        >

                        <include
                            android:id="@+id/layout_search"
                            layout="@layout/view_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_4"
                            />
                    </android.support.v7.widget.Toolbar>
                </android.support.design.widget.CollapsingToolbarLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/tl_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    app:tabGravity="fill"
                    app:tabIndicatorHeight="1dp"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/colorAccent"
                    app:tabTextColor="@android:color/darker_gray"
                    >
                </android.support.design.widget.TabLayout>
            </android.support.design.widget.AppBarLayout>

            <com.wx.app.wxapp.widget.view.NoScrollViewPager
                android:id="@+id/vp_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
            </com.wx.app.wxapp.widget.view.NoScrollViewPager>
        </android.support.design.widget.CoordinatorLayout>
    </com.wx.app.wxapp.widget.view.MultipleStatusView>
</LinearLayout>
